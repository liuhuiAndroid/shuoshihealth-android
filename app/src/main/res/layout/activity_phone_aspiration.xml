<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <com.ssh.shuoshi.view.title.UniteTitle
        android:id="@+id/uniteTitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_42"
        app:titleText="本人签名意愿认证" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/px_19"
        android:layout_marginEnd="@dimen/px_19">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_19"
            android:layout_marginBottom="@dimen/px_14"
            android:text="手机号"
            android:textColor="@color/jiuJiuBlack"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/textPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/px_65"
            android:layout_marginTop="@dimen/px_19"
            android:layout_marginBottom="@dimen/px_14"
            android:background="@null"
            android:hint="请输入手机号"
            android:inputType="number"
            android:textColor="@color/yiJiuBlack"
            android:textSize="15sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/px_19"
        android:layout_marginEnd="@dimen/px_19"
        android:background="#EAEAEA" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/px_19"
        android:layout_marginEnd="@dimen/px_19">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_14"
            android:layout_marginBottom="@dimen/px_14"
            android:text="验证码"
            android:textColor="@color/jiuJiuBlack"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/editCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/px_65"
            android:layout_marginTop="@dimen/px_14"
            android:layout_marginBottom="@dimen/px_14"
            android:background="@null"
            android:hint="请输入验证码"
            android:inputType="number"
            android:maxLength="6"
            android:textColor="@color/yiJiuBlack"
            android:textColorHint="#B1B1B1"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/px_14"
            android:layout_marginBottom="@dimen/px_14"
            android:text="获取验证码"
            android:textColor="@color/yiJiuBlack"
            android:textSize="15sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/px_19"
        android:layout_marginEnd="@dimen/px_19"
        android:background="#EAEAEA" />

    <Button
        android:id="@+id/buttonSubmit"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="@dimen/px_180"
        android:layout_height="@dimen/px_45"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/px_29"
        android:background="@drawable/bg_btn_save_origin"
        android:text="确认"
        android:textColor="#FFFFFF"
        android:textSize="15sp" />


</LinearLayout>