<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll_view"
    android:background="@color/transparent_half"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageViewClose"
        android:layout_width="@dimen/px_31"
        android:layout_height="@dimen/px_31"
        android:layout_gravity="right"
        android:layout_marginEnd="@dimen/px_44"
        android:src="@drawable/black_close" />

    <FrameLayout
        android:layout_width="@dimen/px_279"
        android:layout_height="@dimen/px_296"
        android:layout_marginTop="@dimen/px_4">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/auth_photo" />

        <Button
            android:id="@+id/buttonGo"
            android:layout_width="@dimen/px_194"
            android:layout_height="@dimen/px_43"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/px_224"
            android:background="@drawable/bg_btn_save_origin"
            android:text="马上去认证"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

    </FrameLayout>


</LinearLayout>