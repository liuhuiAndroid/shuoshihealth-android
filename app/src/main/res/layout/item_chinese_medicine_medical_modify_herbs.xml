<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mContainer"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px_29"
    android:layout_marginStart="@dimen/px_5"
    android:layout_marginTop="@dimen/px_14"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_delete"
        android:layout_width="@dimen/px_15"
        android:layout_height="@dimen/px_15"
        android:layout_centerVertical="true"
        android:src="@drawable/line_delete" />

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/px_4"
        android:layout_toStartOf="@+id/editTextWeight"
        android:layout_toEndOf="@+id/img_delete"
        android:maxLines="1"
        android:text="桂枝"
        android:textColor="#333333" />

    <EditText
        android:id="@+id/editTextWeight"
        android:layout_width="@dimen/px_38"
        android:layout_height="@dimen/px_29"
        android:layout_marginEnd="@dimen/px_5"
        android:layout_toStartOf="@+id/textViewUnit"
        android:background="#FFFFFF"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="3"
        android:textColor="@color/yiJiuBlack"
        android:textCursorDrawable="@drawable/my_cursor"
        android:textSize="13sp"
        tools:text="3" />

    <TextView
        android:id="@+id/textViewUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/px_8"
        android:text="g"
        android:textColor="#191919"
        android:textSize="14sp" />
</RelativeLayout>