<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <com.ssh.shuoshi.view.title.UniteTitle
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_42"
        app:titleText="资质认证" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px_24"
        android:layout_marginBottom="@dimen/px_19"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="@dimen/px_240"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center">

            <ImageView
                android:id="@+id/image1"
                android:layout_width="@dimen/px_16"
                android:layout_height="@dimen/px_16"
                android:src="@drawable/orange_circle" />

            <View
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:layout_weight="1"
                android:background="@color/eLiuGrey" />

            <ImageView
                android:id="@+id/image2"
                android:layout_width="@dimen/px_16"
                android:layout_height="@dimen/px_16"
                android:src="@drawable/grey_circle" />

            <View
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:layout_weight="1"
                android:background="@color/eLiuGrey" />

            <ImageView
                android:id="@+id/image3"
                android:layout_width="@dimen/px_16"
                android:layout_height="@dimen/px_16"
                android:src="@drawable/grey_circle" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/px_294"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/px_8"
            android:gravity="center">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1.基本信息"
                android:textColor="@color/orange"
                android:textSize="14sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="2.执照信息"
                android:textColor="@color/cc_grey"
                android:textSize="14sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="3.提交审核"
                android:textColor="@color/cc_grey"
                android:textSize="14sp" />


        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_10"
        android:background="@color/fQi_grey" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/px_14"
            android:layout_marginEnd="@dimen/px_15"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_20"
                android:layout_marginTop="@dimen/px_14"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="@dimen/px_15"
                    android:layout_height="@dimen/px_15"
                    android:src="@drawable/grey_tips" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/px_5"
                    android:text="以下信息为展示信息"
                    android:textColor="@color/jiuJiuBlack" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_19"
                android:layout_marginBottom="@dimen/px_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="姓名"
                    android:textColor="@color/yiJiuBlack"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/px_13"
                    android:background="@null"
                    android:gravity="right"
                    android:hint="请输入您的真实姓名"
                    android:maxLength="30"
                    android:maxLines="1"
                    android:textColor="@color/yiJiuBlack"
                    android:textColorHint="@color/jiuJiuBlack"
                    android:textCursorDrawable="@drawable/my_cursor"
                    android:textSize="15sp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line_grey" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_14"
                android:layout_marginBottom="@dimen/px_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="所在地"
                    android:textColor="@color/yiJiuBlack"
                    android:textSize="15sp" />

                <RelativeLayout
                    android:id="@+id/rl_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/px_68">

                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/px_13"
                        android:gravity="right"
                        android:hint="请选择您所在的地区"
                        android:textColor="@color/yiJiuBlack"
                        android:textColorHint="@color/jiuJiuBlack"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/imgAddress"
                        android:layout_width="@dimen/px_6"
                        android:layout_height="@dimen/px_12"
                        android:layout_alignTop="@+id/tv_address"
                        android:layout_alignBottom="@+id/tv_address"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/arrow_right" />

                </RelativeLayout>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line_grey" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_19"
                android:layout_marginBottom="@dimen/px_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="医院"
                    android:textColor="@color/yiJiuBlack"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/et_hospital"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/px_68"
                    android:layout_marginEnd="@dimen/px_13"
                    android:background="@null"
                    android:gravity="right"
                    android:hint="请输入您所在医院"
                    android:maxLength="30"
                    android:maxLines="1"
                    android:textColor="@color/yiJiuBlack"
                    android:textColorHint="@color/jiuJiuBlack"
                    android:textCursorDrawable="@drawable/my_cursor"
                    android:textSize="15sp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line_grey" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_14"
                android:layout_marginBottom="@dimen/px_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="科室"
                    android:textColor="@color/yiJiuBlack"
                    android:textSize="15sp" />

                <RelativeLayout
                    android:id="@+id/rl_office"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/px_68">

                    <TextView
                        android:id="@+id/tv_office"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/px_13"
                        android:layout_toStartOf="@+id/imgOffice"
                        android:gravity="right"
                        android:hint="请选择平台科室"
                        android:textColor="@color/yiJiuBlack"
                        android:textColorHint="@color/jiuJiuBlack"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/imgOffice"
                        android:layout_width="@dimen/px_6"
                        android:layout_height="@dimen/px_12"
                        android:layout_alignTop="@+id/tv_office"
                        android:layout_alignBottom="@+id/tv_office"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/arrow_right" />

                </RelativeLayout>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line_grey" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_14"
                android:layout_marginBottom="@dimen/px_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="职称"
                    android:textColor="@color/yiJiuBlack"
                    android:textSize="15sp" />

                <RelativeLayout
                    android:id="@+id/rl_job"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/px_68">

                    <TextView
                        android:id="@+id/tv_job"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/px_13"
                        android:layout_toStartOf="@+id/imgJob"
                        android:gravity="right"
                        android:hint="请选择您的职称"
                        android:textColor="@color/yiJiuBlack"
                        android:textColorHint="@color/jiuJiuBlack"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/imgJob"
                        android:layout_width="@dimen/px_6"
                        android:layout_height="@dimen/px_12"
                        android:layout_alignTop="@+id/tv_job"
                        android:layout_alignBottom="@+id/tv_job"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/arrow_right" />

                </RelativeLayout>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line_grey" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_14"
                android:layout_marginBottom="@dimen/px_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="简介"
                    android:textColor="@color/yiJiuBlack"
                    android:textSize="15sp" />

                <RelativeLayout
                    android:id="@+id/rl_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/px_68">

                    <TextView
                        android:id="@+id/tv_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/px_13"
                        android:layout_toStartOf="@+id/imgInfo"
                        android:ellipsize="end"
                        android:gravity="right"
                        android:hint="请输入个人简介"
                        android:maxLines="1"
                        android:textColor="@color/yiJiuBlack"
                        android:textColorHint="@color/jiuJiuBlack"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/imgInfo"
                        android:layout_width="@dimen/px_6"
                        android:layout_height="@dimen/px_12"
                        android:layout_alignTop="@+id/tv_info"
                        android:layout_alignBottom="@+id/tv_info"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/arrow_right" />

                </RelativeLayout>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line_grey" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_14"
                android:layout_marginBottom="@dimen/px_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="擅长"
                    android:textColor="@color/yiJiuBlack"
                    android:textSize="15sp" />

                <RelativeLayout
                    android:id="@+id/rl_good"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/px_68">

                    <TextView
                        android:id="@+id/tv_good"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/px_13"
                        android:layout_toStartOf="@+id/imgGood"
                        android:ellipsize="end"
                        android:gravity="right"
                        android:hint="请输入擅长领域"
                        android:maxLines="1"
                        android:textColor="@color/yiJiuBlack"
                        android:textColorHint="@color/jiuJiuBlack"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/imgGood"
                        android:layout_width="@dimen/px_6"
                        android:layout_height="@dimen/px_12"
                        android:layout_alignTop="@+id/tv_good"
                        android:layout_alignBottom="@+id/tv_good"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/arrow_right" />

                </RelativeLayout>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line_grey" />

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/px_22"
        android:layout_marginTop="@dimen/px_14"
        android:layout_marginEnd="@dimen/px_22"
        android:layout_marginBottom="@dimen/px_14"
        android:gravity="center">

        <Button
            android:id="@+id/btn_next"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_44"
            android:background="@drawable/bg_btn_save_origin"
            android:text="下一步"
            android:textColor="@color/white"
            android:textSize="15sp" />

    </LinearLayout>

</LinearLayout>