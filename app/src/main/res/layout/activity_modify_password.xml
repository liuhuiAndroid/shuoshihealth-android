<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fEr_grey"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <com.ssh.shuoshi.view.title.UniteTitle
        android:id="@+id/uniteTitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_42"
        app:titleText="修改手机号" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <TextView
            android:id="@+id/textViewModifyText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="修改手机号后，下次登录时使用新手机号登录。 "
            android:textColor="#999999"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textViewModifyTextPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewModifyText"
            android:layout_marginTop="5dp"
            android:text="当前手机号：138****1234"
            android:textColor="#999999"
            android:textSize="14sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/px_15"
        android:paddingRight="@dimen/px_20">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="手机号"
            android:textColor="#191919"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/editTextPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/px_15"
            android:background="@color/transparent"
            android:hint="请输入新的手机号"
            android:inputType="number"
            android:maxLength="11"
            android:textColorHint="#C6C6C6"
            android:textCursorDrawable="@drawable/my_cursor"
            android:textSize="15sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/px_15"
        android:paddingRight="@dimen/px_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="验证码"
            android:textColor="#191919"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/editTextCode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/px_15"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:hint="请输入验证码"
            android:inputType="number"
            android:maxLength="6"
            android:textColorHint="#C6C6C6"
            android:textCursorDrawable="@drawable/my_cursor"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textViewGetCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="获取验证码"
            android:textColor="#848484"
            android:textSize="14sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#F2F2F2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <Button
            android:id="@+id/buttonSave"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_44"
            android:layout_marginLeft="@dimen/px_22"
            android:layout_marginTop="@dimen/px_14"
            android:layout_marginRight="@dimen/px_22"
            android:layout_marginBottom="@dimen/px_14"
            android:background="@drawable/change_button"
            android:enabled="false"
            android:text="修改手机号"
            android:textColor="@drawable/change_btn_text"
            android:textSize="15sp" />
    </LinearLayout>


</LinearLayout>