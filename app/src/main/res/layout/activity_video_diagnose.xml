<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <com.ssh.shuoshi.view.title.UniteTitle
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_42"
        android:background="@android:color/white"
        app:titleText="视频问诊" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_48"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_dai"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="待接诊"
            android:textColor="@color/orange"
            android:textSize="14sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/px_18"
            android:background="@color/line_grey" />

        <TextView
            android:id="@+id/tv_ing"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="咨询中"
            android:textColor="@color/yiJiuBlack"
            android:textSize="14sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/px_18"
            android:background="@color/line_grey" />

        <TextView
            android:id="@+id/tv_end"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="已结束"
            android:textColor="@color/yiJiuBlack"
            android:textSize="14sp" />

    </LinearLayout>


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>