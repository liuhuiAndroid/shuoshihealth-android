<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fQi_grey"
    android:orientation="vertical">

    <com.ssh.shuoshi.view.title.UniteTitle
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_42"
        app:titleText="工作室设置" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_46">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/px_16"
            android:text="服务设置"
            android:textColor="@color/yiJiuBlack"
            android:textSize="15sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_68"
        android:background="@color/white"
        android:padding="@dimen/px_15">

        <ImageView
            android:id="@+id/img_left_tu"
            android:layout_width="@dimen/px_38"
            android:layout_height="@dimen/px_38"
            android:src="@drawable/tu" />

        <TextView
            android:id="@+id/tv_tu"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/px_26"
            android:layout_alignTop="@+id/img_left_tu"
            android:layout_alignBottom="@+id/img_left_tu"
            android:layout_marginStart="@dimen/px_9"
            android:layout_toEndOf="@+id/img_left_tu"
            android:gravity="center"
            android:text="图文问诊"
            android:textColor="@color/yiJiuBlack"
            android:textSize="16sp" />

        <RelativeLayout
            android:id="@+id/rl_tu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignTop="@+id/tv_tu"
            android:layout_alignBottom="@+id/tv_tu"
            android:layout_toEndOf="@+id/tv_tu"
            android:background="#FFFFFF"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/px_10"
                android:layout_marginEnd="@dimen/px_9"
                android:layout_toLeftOf="@+id/img_right_tu"
                android:text="去开通"
                android:textColor="@color/jiuJiuBlack"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/img_right_tu"
                android:layout_width="@dimen/px_6"
                android:layout_height="@dimen/px_12"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/right_arrow" />

        </RelativeLayout>

        <Switch
            android:id="@+id/switch_tu"
            android:layout_width="@dimen/px_44"
            android:layout_height="@dimen/px_25"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_switch_track_selector"
            android:thumb="@null"
            android:track="@null"
            android:visibility="gone"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/llTuSetting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_grey" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_12"
            android:layout_marginBottom="@dimen/px_13">

            <TextView
                android:id="@+id/tv_tu_price_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/px_14"
                android:text="价格"
                android:textColor="@color/sanSanBlack"
                android:textSize="15sp" />

            <RelativeLayout
                android:id="@+id/rl_tu_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/tv_tu_price_des">

                <TextView
                    android:id="@+id/tv_tu_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/px_10"
                    android:layout_marginEnd="@dimen/px_9"
                    android:layout_toStartOf="@+id/img_tu_price"
                    android:gravity="right"
                    android:hint="请设置"
                    android:textColor="@color/sanSanBlack"
                    android:textColorHint="@color/jiuD_grey"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/img_tu_price"
                    android:layout_width="@dimen/px_6"
                    android:layout_height="@dimen/px_12"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/px_13"
                    android:src="@mipmap/right_arrow" />

            </RelativeLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_grey" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_10"
            android:background="#F7F7F7" />
    </LinearLayout>

    <View
        style="@style/split_line"
        android:background="@color/line_grey" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_68"
        android:background="@color/white"
        android:padding="@dimen/px_15">

        <ImageView
            android:id="@+id/img_left_shi"
            android:layout_width="@dimen/px_38"
            android:layout_height="@dimen/px_38"
            android:src="@drawable/video" />

        <TextView
            android:id="@+id/tv_video"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/px_26"
            android:layout_alignTop="@+id/img_left_shi"
            android:layout_alignBottom="@+id/img_left_shi"
            android:layout_marginStart="@dimen/px_9"
            android:layout_toEndOf="@+id/img_left_shi"
            android:gravity="center"
            android:text="视频问诊"
            android:textColor="@color/yiJiuBlack"
            android:textSize="16sp" />

        <RelativeLayout
            android:id="@+id/rl_video"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignTop="@+id/tv_video"
            android:layout_alignBottom="@+id/tv_video"
            android:layout_toEndOf="@+id/tv_video"
            android:background="#FFFFFF"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/px_10"
                android:layout_marginEnd="@dimen/px_9"
                android:layout_toLeftOf="@+id/img_right_shi"
                android:text="去开通"
                android:textColor="@color/jiuJiuBlack"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/img_right_shi"
                android:layout_width="@dimen/px_6"
                android:layout_height="@dimen/px_12"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/right_arrow" />

        </RelativeLayout>

        <Switch
            android:id="@+id/switch_video"
            android:layout_width="@dimen/px_44"
            android:layout_height="@dimen/px_25"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_switch_track_selector"
            android:thumb="@null"
            android:track="@null"
            android:visibility="gone"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/llVideoSetting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_grey" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_12"
            android:layout_marginBottom="@dimen/px_12">

            <TextView
                android:id="@+id/tv_video_price_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/px_14"
                android:text="价格"
                android:textColor="@color/sanSanBlack"
                android:textSize="15sp" />

            <RelativeLayout
                android:id="@+id/rl_video_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/tv_video_price_des">

                <TextView
                    android:id="@+id/tv_video_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/px_10"
                    android:layout_marginEnd="@dimen/px_9"
                    android:layout_toStartOf="@+id/img_video_price"
                    android:gravity="right"
                    android:hint="请设置"
                    android:textColor="@color/sanSanBlack"
                    android:textColorHint="@color/jiuD_grey"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/img_video_price"
                    android:layout_width="@dimen/px_6"
                    android:layout_height="@dimen/px_12"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/px_13"
                    android:src="@mipmap/right_arrow" />

            </RelativeLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_grey" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_12"
            android:layout_marginBottom="@dimen/px_12">

            <TextView
                android:id="@+id/tv_video_time_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/px_14"
                android:text="接诊时间"
                android:textColor="@color/sanSanBlack"
                android:textSize="15sp" />

            <RelativeLayout
                android:id="@+id/rl_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/tv_video_time_hint">

                <TextView
                    android:id="@+id/tv_video_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/px_10"
                    android:layout_marginEnd="@dimen/px_9"
                    android:layout_toStartOf="@+id/img_video_time"
                    android:gravity="right"
                    android:text="请设置"
                    android:textColor="@color/jiuD_grey"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/img_video_time"
                    android:layout_width="@dimen/px_6"
                    android:layout_height="@dimen/px_12"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/px_13"
                    android:src="@mipmap/right_arrow" />

            </RelativeLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_grey" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_12"
            android:layout_marginBottom="@dimen/px_12">

            <TextView
                android:id="@+id/tv_video_period"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/px_14"
                android:text="预约周期"
                android:textColor="@color/sanSanBlack"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/px_14"
                android:text="一周"
                android:textColor="@color/jiuD_grey"
                android:textSize="15sp" />

        </RelativeLayout>
    </LinearLayout>

