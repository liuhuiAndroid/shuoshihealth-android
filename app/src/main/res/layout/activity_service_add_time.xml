<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.ssh.shuoshi.view.title.UniteTitle
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_42"
        app:titleText="添加接诊时间" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/fQi_grey">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_46">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/px_14"
                    android:text="选择星期"
                    android:textColor="@color/yiJiuBlack"
                    android:textSize="15sp" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingStart="@dimen/px_14"
                android:paddingTop="@dimen/px_14"
                android:paddingBottom="@dimen/px_8">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="周一"
                    android:textColor="@color/yiJiuBlack"
                    android:textSize="16sp" />

                <CheckBox
                    android:id="@+id/cb_1"
                    style="@style/CustomCheckboxTheme"
                    android:layout_width="@dimen/px_19"
                    android:layout_height="@dimen/px_19"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/px_14" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingStart="@dimen/px_14"
                android:paddingTop="@dimen/px_14"
                android:paddingEnd="@dimen/px_14"
                android:paddingBottom="@dimen/px_8">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="周二"
                    android:textColor="@color/yiJiuBlack"
                    android:textSize="16sp" />

                <CheckBox
                    android:id="@+id/cb_2"
                    style="@style/CustomCheckboxTheme"
                    android:layout_width="@dimen/px_19"
                    android:layout_height="@dimen/px_19"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingStart="@dimen/px_14"
                android:paddingTop="@dimen/px_14"
                android:paddingEnd="@dimen/px_14"
                android:paddingBottom="@dimen/px_8">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="周三"
                    android:textColor="@color/yiJiuBlack"
                    android:textSize="16sp" />

                <CheckBox
                    android:id="@+id/cb_3"
                    style="@style/CustomCheckboxTheme"
                    android:layout_width="@dimen/px_19"
                    android:layout_height="@dimen/px_19"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingStart="@dimen/px_14"
                android:paddingTop="@dimen/px_14"
                android:paddingEnd="@dimen/px_14"
                android:paddingBottom="@dimen/px_8">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="周四"
                    android:textColor="@color/yiJiuBlack"
                    android:textSize="16sp" />

                <CheckBox
                    android:id="@+id/cb_4"
                    style="@style/CustomCheckboxTheme"
                    android:layout_width="@dimen/px_19"
                    android:layout_height="@dimen/px_19"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingStart="@dimen/px_14"
                android:paddingTop="@dimen/px_14"
                android:paddingEnd="@dimen/px_14"
                android:paddingBottom="@dimen/px_8">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="周五"
                    android:textColor="@color/yiJiuBlack"
                    android:textSize="16sp" />

                <CheckBox
                    android:id="@+id/cb_5"
                    style="@style/CustomCheckboxTheme"
                    android:layout_width="@dimen/px_19"
                    android:layout_height="@dimen/px_19"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingStart="@dimen/px_14"
                android:paddingTop="@dimen/px_14"
                android:paddingEnd="@dimen/px_14"
                android:paddingBottom="@dimen/px_8">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="周六"
                    android:textColor="@color/yiJiuBlack"
                    android:textSize="16sp" />

                <CheckBox
                    android:id="@+id/cb_6"
                    style="@style/CustomCheckboxTheme"
                    android:layout_width="@dimen/px_19"
                    android:layout_height="@dimen/px_19"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingStart="@dimen/px_14"
                android:paddingTop="@dimen/px_14"
                android:paddingEnd="@dimen/px_14"
                android:paddingBottom="@dimen/px_8">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="周日"
                    android:textColor="@color/yiJiuBlack"
                    android:textSize="16sp" />

                <CheckBox
                    android:id="@+id/cb_7"
                    style="@style/CustomCheckboxTheme"
                    android:layout_width="@dimen/px_19"
                    android:layout_height="@dimen/px_19"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_10"
                android:background="@color/fQi_grey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rl_start_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingTop="@dimen/px_14"
                    android:paddingBottom="@dimen/px_14">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/px_14"
                        android:text="开始时间"
                        android:textColor="@color/sanSanBlack"
                        android:textSize="16sp" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_start_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/px_10"
                            android:layout_marginEnd="@dimen/px_10"
                            android:layout_toStartOf="@+id/img_start_time"
                            android:gravity="right"
                            android:hint="请设置"
                            android:textColor="@color/yiJiuBlack"
                            android:textColorHint="@color/jiuD_grey"
                            android:textSize="16sp" />

                        <ImageView
                            android:id="@+id/img_start_time"
                            android:layout_width="@dimen/px_6"
                            android:layout_height="@dimen/px_12"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="@dimen/px_13"
                            android:src="@drawable/arrow_right" />

                    </RelativeLayout>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/line_grey" />

                <RelativeLayout
                    android:id="@+id/rl_end_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingTop="@dimen/px_14"
                    android:paddingBottom="@dimen/px_14">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/px_14"
                        android:text="结束时间"
                        android:textColor="@color/sanSanBlack"
                        android:textSize="16sp" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_end_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/px_10"
                            android:layout_marginEnd="@dimen/px_10"
                            android:layout_toStartOf="@+id/img_end_time"
                            android:gravity="right"
                            android:hint="请设置"
                            android:textColor="@color/yiJiuBlack"
                            android:textColorHint="@color/jiuD_grey"
                            android:textSize="16sp" />

                        <ImageView
                            android:id="@+id/img_end_time"
                            android:layout_width="@dimen/px_6"
                            android:layout_height="@dimen/px_12"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="@dimen/px_13"
                            android:src="@drawable/arrow_right" />

                    </RelativeLayout>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/fO_grey" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@color/fQi_grey"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/px_14"
                    android:paddingTop="@dimen/px_10"
                    android:paddingEnd="@dimen/px_19"
                    android:paddingBottom="@dimen/px_19">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="温馨提示："
                        android:textColor="@color/jiuJiuBlack"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1.接诊时间段的开始时间、结束时间间隔为一小时。"
                        android:textColor="@color/jiuJiuBlack"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2.每个时间段最多可预约4人。"
                        android:textColor="@color/jiuJiuBlack"
                        android:textSize="14sp" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingStart="@dimen/px_22"
        android:paddingTop="@dimen/px_14"
        android:paddingEnd="@dimen/px_22"
        android:paddingBottom="@dimen/px_14">

        <Button
            android:id="@+id/btn_save"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_44"
            android:background="@drawable/orange_round"
            android:text="保存"
            android:textColor="@color/white"
            android:textSize="15sp" />

    </LinearLayout>

</LinearLayout>