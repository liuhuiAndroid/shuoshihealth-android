<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_back"
        android:layout_width="@dimen/px_22"
        android:layout_height="@dimen/px_22"
        android:layout_marginStart="@dimen/px_14"
        android:layout_marginTop="@dimen/px_29"
        android:src="@drawable/arrow_left" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/px_14"
        android:layout_marginTop="@dimen/px_33"
        android:text="手机号快捷登录/注册"
        android:textColor="@color/yiJiuBlack"
        android:textSize="24sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/px_14"
        android:layout_marginTop="@dimen/px_10"
        android:text="未注册的手机号将自动创建帐号"
        android:textColor="@color/jiuJiuBlack"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/et_phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_20"
        android:layout_marginStart="@dimen/px_14"
        android:layout_marginTop="@dimen/px_86"
        android:layout_marginEnd="@dimen/px_14"
        android:background="@null"
        android:hint="请输入手机号"
        android:inputType="number"
        android:maxLength="11"
        android:textColor="@color/yiJiuBlack"
        android:textColorHint="#c6c6c6"
        android:textCursorDrawable="@drawable/my_cursor"
        android:textSize="17sp" />

    <include layout="@layout/line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px_10"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cb_agree"
            style="@style/CustomCheckboxTheme"
            android:layout_marginTop="@dimen/px_2"
            android:layout_width="@dimen/px_16"
            android:layout_height="@dimen/px_16"
            android:layout_marginStart="@dimen/px_15" />

        <TextView
            android:id="@+id/tv_agree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:text="我已同意并阅读"
            android:textColor="#c6c6c6" />

        <TextView
            android:id="@+id/tv_law"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《悠安医生服务协议及隐私政策》"
            android:textColor="@color/orange" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px_53"
        android:background="@color/white"
        android:gravity="center">

        <Button
            android:id="@+id/btn_code_login"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_44"
            android:layout_marginStart="@dimen/px_22"
            android:layout_marginEnd="@dimen/px_22"
            android:background="@drawable/change_button"
            android:enabled="false"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="@drawable/change_btn_text"
            android:textSize="15sp" />

    </LinearLayout>

</LinearLayout>