<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/px_6"
    android:layout_marginTop="@dimen/px_14"
    android:layout_marginEnd="@dimen/px_6"
    android:layout_marginBottom="@dimen/px_14"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageViewTag"
        android:layout_width="@dimen/px_29"
        android:layout_height="@dimen/px_29"
        android:src="@drawable/default_img" />

    <TextView
        android:id="@+id/textViewTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px_7"
        android:maxLines="1"
        android:textColor="#333333"
        android:textSize="13sp"
        tools:text="图文问诊" />

</LinearLayout>