<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_back"
        android:layout_width="@dimen/px_22"
        android:layout_height="@dimen/px_22"
        android:layout_marginStart="@dimen/px_12"
        android:layout_marginTop="@dimen/px_30"
        android:src="@drawable/arrow_left" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/px_14"
        android:layout_marginTop="@dimen/px_33"
        android:text="输入验证码"
        android:textColor="@color/yiJiuBlack"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/px_14"
        android:layout_marginTop="@dimen/px_10"
        android:text="验证码已发送到"
        android:textColor="@color/jiuJiuBlack"
        android:textSize="15sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/px_14"
        android:layout_marginTop="@dimen/px_78"
        android:layout_marginEnd="@dimen/px_14">

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_23"
            android:layout_toStartOf="@+id/tv_time"
            android:background="@null"
            android:hint="请输入验证码"
            android:inputType="number"
            android:textColorHint="#c6c6c6"
            android:textCursorDrawable="@drawable/my_cursor"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/px_23"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="#848484"
            android:textSize="14sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginStart="@dimen/px_14"
        android:layout_marginTop="@dimen/px_11"
        android:layout_marginEnd="@dimen/px_14"
        android:background="@color/line_grey" />

</LinearLayout>